<body style="display: flex; justify-content: center ; align-items: center;">
    <div>
        <h1>Contents To Be Deleted  Are Listed Below</h1>
        <%data.forEach((val,index)=>{%>
            <div>
              <form action="/remove" method="post">
                  
                  <h1><%=(index+1)%>.<%=val.title%></h1>
                  <input type="hidden" name="delete" value="<%=val._id%>">
                  <input type="hidden" name="count" value="<%=(index+1)%>">
                  <input type="hidden" name="deltitle" value="<%=val.title%>">
                  <input type="submit" value="delete"
                  style="width: 100px; height: 40px; border-radius:25px; border-style: none;
                  color: white;
                  background-color:#8F00FF;
                   text-align: center;
                   text-decoration: none;
                   font-size: 16px;
                   margin: 4px 2px;
                   cursor: pointer;
                   -webkit-transition-duration: 0.4s;
                   transition-duration: 0.4s;">
              </form>
             
            </div>
      <%})%>
    </div>
</body>
